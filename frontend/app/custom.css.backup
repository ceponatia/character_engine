  }
  
  .locations-carousel-container {
    gap: 0.5rem;
  }
  
  .carousel-arrow {
    width: 35px;
    height: 35px;
    font-size: 1rem;
  }
}

/* Location Image Upload Styles */
.location-image-upload-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 0.5rem;
}

.location-image-preview {
  width: 100%;
  height: 200px;
  border-radius: 0.75rem;
  border: 2px solid rgba(148, 163, 184, 0.3);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(30, 41, 59, 0.4);
}

.location-uploaded-image,
.location-default-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.location-default-image {
  border: 2px solid rgba(147, 51, 234, 0.4);
  opacity: 0.8;
}

.location-image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  color: #94a3b8;
}

.location-image-placeholder span {
  font-size: 2.5rem;
  opacity: 0.6;
}

.location-image-placeholder p {
  margin: 0;
  font-size: 0.9rem;
  text-align: center;
}

.location-image-upload-controls {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.location-image-help-text {
  color: #94a3b8;
  font-size: 0.85rem;
  margin: 0;
  font-style: italic;
  line-height: 1.4;
}

/* Responsive location image upload */
@media (max-width: 768px) {
  .location-image-preview {
    height: 150px;
  }
  
  .location-image-upload-controls {
    flex-direction: column;
    align-items: stretch;
  }
  
  .location-image-upload-controls .btn {
    width: 100%;
    justify-content: center;
  }
}