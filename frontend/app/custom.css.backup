/* Custom CSS for Romantic Chatbot Theme */

/* Landing Page Styles */
.landing-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #374151 100%);
  padding: 2rem;
}

.hero-section {
  text-align: center;
  margin-bottom: 4rem;
  padding: 3rem 1rem;
}

.hero-title {
  font-size: 4rem;
  font-weight: 900;
  color: #f1f5f9;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #60a5fa, #a855f7, #ec4899, #f59e0b);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 0 30px rgba(168, 85, 247, 0.3);
  letter-spacing: -0.05em;
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    filter: drop-shadow(0 0 10px rgba(168, 85, 247, 0.4));
  }
  to {
    filter: drop-shadow(0 0 20px rgba(168, 85, 247, 0.8)) drop-shadow(0 0 30px rgba(236, 72, 153, 0.4));
  }
}

.hero-subtitle {
  font-size: 1.3rem;
  color: #cbd5e1;
  max-width: 600px;
  margin: 0 auto;
}

/* Quick Actions */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 4rem;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}

.action-card {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  text-align: center;
}

.action-card:hover {
  transform: translateY(-4px);
  border-color: #e11d48;
  box-shadow: 0 12px 30px rgba(225, 29, 72, 0.3);
}

.action-card.primary {
  border-color: #e11d48;
  background: linear-gradient(135deg, rgba(225, 29, 72, 0.1), rgba(15, 23, 42, 0.8));
}

.action-card.secondary {
  border-color: rgba(147, 51, 234, 0.3);
}

.action-card.secondary:hover {
  border-color: #9333ea;
  box-shadow: 0 12px 30px rgba(147, 51, 234, 0.3);
}

.action-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
  display: block;
}

.action-card h3 {
  color: #f1f5f9;
  font-size: 1.5rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.action-card p {
  color: #cbd5e1;
  font-size: 1rem;
  line-height: 1.5;
}

/* Dashboard Sections */
.dashboard-sections {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.dashboard-section {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  flex-wrap: wrap;
  gap: 1rem;
}

.section-header h2 {
  color: #f1f5f9;
  font-size: 1.5rem;
  font-weight: bold;
  margin: 0;
}

/* Character and Setting Previews */
.characters-preview,
.settings-preview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.character-preview-card,
.setting-preview-card {
  background: rgba(30, 41, 59, 0.6);
  border-radius: 0.75rem;
  padding: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.2);
  text-decoration: none;
  color: inherit;
  cursor: pointer;
  transition: all 0.3s ease;
}

.character-preview-card:hover,
.setting-preview-card:hover {
  transform: translateY(-2px);
  border-color: #e11d48;
  box-shadow: 0 8px 25px rgba(225, 29, 72, 0.2);
}

.character-preview-card .character-image,
.setting-preview-card .setting-image {
  width: 100%;
  height: 100px;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 0.5rem;
  background: rgba(15, 23, 42, 0.8);
}

.character-preview-card .character-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.character-preview-card .character-info h3,
.setting-preview-card .setting-info h3 {
  color: #f1f5f9;
  font-size: 1rem;
  font-weight: bold;
  margin-bottom: 0.25rem;
}

.character-preview-card .character-info p,
.setting-preview-card .setting-info p {
  color: #cbd5e1;
  font-size: 0.85rem;
}

/* Sessions */
.sessions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1rem;
}

.session-card {
  background: rgba(30, 41, 59, 0.6);
  border-radius: 0.75rem;
  padding: 1.5rem;
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.session-card h3 {
  color: #f1f5f9;
  font-size: 1.1rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.session-card p {
  color: #cbd5e1;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.session-card .last-activity {
  color: #94a3b8;
  font-size: 0.8rem;
  margin-bottom: 1rem;
}

/* Navigation Footer */
.navigation-footer {
  margin-top: 4rem;
  padding: 2rem 0;
}

.nav-links {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap;
}

.nav-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: rgba(15, 23, 42, 0.6);
  border-radius: 0.75rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  min-width: 100px;
}

.nav-link:hover {
  transform: translateY(-2px);
  border-color: #e11d48;
  box-shadow: 0 8px 20px rgba(225, 29, 72, 0.2);
}

.nav-icon {
  font-size: 1.5rem;
}

.nav-label {
  color: #cbd5e1;
  font-size: 0.9rem;
  font-weight: 500;
}

/* Settings Library Styles */
.settings-library-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #374151 100%);
  padding: 2rem;
}

.library-header {
  margin-bottom: 2rem;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 2rem;
  flex-wrap: wrap;
}

.title-section h1 {
  color: #f1f5f9;
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.title-section p {
  color: #cbd5e1;
  font-size: 1.1rem;
}

.back-link {
  color: #cbd5e1;
  text-decoration: none;
  margin-bottom: 1rem;
  display: inline-block;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  border: 1px solid rgba(148, 163, 184, 0.2);
  transition: all 0.3s ease;
}

.back-link:hover {
  color: #f1f5f9;
  border-color: #e11d48;
}

.header-actions {
  flex-shrink: 0;
}

/* Library Filters */
.library-filters {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 2rem;
  margin-bottom: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  display: flex;
  gap: 2rem;
  align-items: end;
  flex-wrap: wrap;
}

.search-section {
  flex: 1;
  min-width: 300px;
}

.search-input {
  width: 100%;
  font-size: 1rem;
}

.filter-section {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  min-width: 180px;
}

.filter-section label {
  color: #f1f5f9;
  font-weight: 500;
  font-size: 0.9rem;
}

.filter-select {
  padding: 0.75rem;
}

/* Library Content */
.library-content {
  margin-bottom: 3rem;
}

.settings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
}

.setting-card {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.setting-card:hover {
  transform: translateY(-4px);
  border-color: #e11d48;
  box-shadow: 0 12px 30px rgba(225, 29, 72, 0.2);
}

.setting-card .setting-image {
  width: 100%;
  height: 180px;
  background: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.setting-card .setting-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.setting-card .placeholder-image {
  font-size: 3rem;
  color: #9333ea;
}

.setting-content {
  padding: 1.5rem;
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.setting-header h3 {
  color: #f1f5f9;
  font-size: 1.3rem;
  font-weight: bold;
  margin: 0;
  flex: 1;
}

.setting-type-tag {
  background: rgba(147, 51, 234, 0.2);
  color: #c084fc;
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.8rem;
  font-weight: 500;
  text-transform: capitalize;
  flex-shrink: 0;
}

.setting-description {
  color: #cbd5e1;
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 1rem;
}

.setting-meta {
  color: #94a3b8;
  font-size: 0.85rem;
  margin-bottom: 0.5rem;
}

.setting-meta strong {
  color: #cbd5e1;
}

.setting-actions {
  display: flex;
  gap: 0.75rem;
  margin-top: 1.5rem;
  flex-wrap: wrap;
}

.btn-small {
  padding: 0.5rem 1rem;
  font-size: 0.85rem;
}

.btn-danger {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
  color: white;
  border: 1px solid #dc2626;
}

.btn-danger:hover {
  background: linear-gradient(135deg, #b91c1c, #991b1b);
  border-color: #b91c1c;
  box-shadow: 0 4px 15px rgba(220, 38, 38, 0.3);
}

/* Library Stats */
.library-stats {
  text-align: center;
  padding: 2rem;
  color: #94a3b8;
  font-size: 0.9rem;
}

/* Sessions Page Styles */
.sessions-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #374151 100%);
  padding: 2rem;
}

.session-card.enhanced {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 1.5rem;
}

.session-card.enhanced:hover {
  transform: translateY(-4px);
  border-color: #e11d48;
  box-shadow: 0 12px 30px rgba(225, 29, 72, 0.2);
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.session-header h3 {
  color: #f1f5f9;
  font-size: 1.3rem;
  font-weight: bold;
  margin: 0;
  flex: 1;
}

.session-meta {
  text-align: right;
}

.session-date {
  color: #94a3b8;
  font-size: 0.85rem;
  background: rgba(30, 41, 59, 0.6);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
}

.session-details {
  margin-bottom: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.session-setting,
.session-characters,
.session-progress {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.session-details .label {
  color: #cbd5e1;
  font-size: 0.9rem;
  font-weight: 500;
  flex-shrink: 0;
}

.session-details .value {
  color: #f1f5f9;
  font-size: 0.9rem;
}

.character-list {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem;
}

.character-tag {
  color: #c084fc;
  font-size: 0.85rem;
}

.session-actions {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.session-actions .btn {
  flex: 1;
}

.session-actions .btn-small {
  flex: none;
  min-width: 80px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .landing-container {
    padding: 1rem;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1.1rem;
  }
  
  .quick-actions {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .action-card {
    padding: 1.5rem;
  }
  
  .section-header {
    flex-direction: column;
    align-items: stretch;
  }
  
  .nav-links {
    gap: 1rem;
  }
  
  .settings-library-container {
    padding: 1rem;
  }
  
  .header-content {
    flex-direction: column;
    align-items: stretch;
  }
  
  .library-filters {
    flex-direction: column;
    gap: 1rem;
  }
  
  .search-section {
    min-width: auto;
  }
  
  .filter-section {
    min-width: auto;
  }
  
  .settings-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .setting-actions {
    justify-content: center;
  }
}

/* Image Upload Styles */
.image-upload-section {
  background: rgba(30, 41, 59, 0.4);
  border-radius: 0.75rem;
  padding: 1.5rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.image-preview {
  width: 100%;
  height: 200px;
  margin-bottom: 1rem;
  border-radius: 0.5rem;
  overflow: hidden;
  background: rgba(15, 23, 42, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-preview .uploaded-image,
.image-preview .default-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-preview .default-image {
  opacity: 0.7;
}

.image-placeholder {
  text-align: center;
  color: #94a3b8;
}

.image-placeholder span {
  font-size: 3rem;
  display: block;
  margin-bottom: 0.5rem;
  color: #9333ea;
}

.image-placeholder p {
  margin: 0;
  font-size: 0.9rem;
}

.image-upload-controls {
  display: flex;
  gap: 1rem;
  align-items: center;
  margin-bottom: 1rem;
  flex-wrap: wrap;
}

.file-input {
  display: none;
}

.image-help-text {
  color: #94a3b8;
  font-size: 0.85rem;
  margin: 0;
  font-style: italic;
  line-height: 1.4;
}

/* Story Configuration Styles */
.story-config-container {
  min-height: 100vh;
  padding: 2rem;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #374151 100%);
}

.story-config-header {
  text-align: center;
  margin-bottom: 3rem;
}

.story-config-header h1 {
  color: #f1f5f9;
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.story-config-header p {
  color: #cbd5e1;
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
}

.story-config-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.config-section {
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  flex-wrap: wrap;
  gap: 1rem;
}

.section-header h2 {
  color: #f1f5f9;
  font-size: 1.5rem;
  font-weight: bold;
  margin: 0;
}

.section-actions {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

/* Setting Selection */
.settings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
}

.setting-card {
  background: rgba(30, 41, 59, 0.6);
  border-radius: 0.75rem;
  padding: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.setting-card:hover {
  transform: translateY(-2px);
  border-color: #e11d48;
  box-shadow: 0 8px 25px rgba(225, 29, 72, 0.2);
}

.setting-card.selected {
  border-color: #e11d48;
  background: rgba(30, 41, 59, 0.8);
}

.setting-image {
  width: 100%;
  height: 120px;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
  overflow: hidden;
}

.setting-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.placeholder-image {
  font-size: 2rem;
  color: #9333ea;
}

.setting-info h3 {
  color: #f1f5f9;
  font-size: 1.1rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.setting-info p {
  color: #cbd5e1;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.setting-tag {
  display: inline-block;
  background: rgba(147, 51, 234, 0.2);
  color: #c084fc;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.8rem;
}

.selected-setting {
  margin-bottom: 1rem;
}

.setting-selection {
  margin-bottom: 2rem;
}

.selected-setting-preview {
  margin-top: 1.5rem;
}

.setting-preview-card {
  background: rgba(30, 41, 59, 0.4);
  border-radius: 0.75rem;
  padding: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
  display: flex;
  gap: 1rem;
  align-items: center;
}

.setting-preview-card .setting-image {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.setting-preview-card .setting-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.setting-preview-card .setting-info {
  flex: 1;
}

.setting-preview-card .setting-info h3 {
  color: #f1f5f9;
  font-size: 1.1rem;
  font-weight: bold;
  margin-bottom: 0.25rem;
}

.setting-preview-card .setting-info p {
  color: #cbd5e1;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

/* Character Selection */
.available-characters,
.selected-characters {
  margin-bottom: 2rem;
}

.available-characters h3,
.selected-characters h3 {
  color: #f1f5f9;
  font-size: 1.2rem;
  margin-bottom: 1rem;
}

.characters-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.character-card.selectable {
  cursor: pointer;
  position: relative;
}

.character-card.selectable:hover .character-overlay {
  opacity: 1;
}

.character-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(225, 29, 72, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 0.75rem;
  color: white;
  font-weight: bold;
}

.character-config {
  background: rgba(30, 41, 59, 0.4);
  border-radius: 0.75rem;
  padding: 1.5rem;
  margin-bottom: 1rem;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.character-summary {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.character-summary .character-image {
  width: 60px;
  height: 60px;
  flex-shrink: 0;
}

.character-summary .character-info {
  flex: 1;
}

.character-summary h4 {
  color: #f1f5f9;
  font-size: 1.1rem;
  margin-bottom: 0.25rem;
}

.character-summary p {
  color: #cbd5e1;
  font-size: 0.9rem;
}

.intro-message-config label {
  display: block;
  color: #f1f5f9;
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.field-note {
  color: #94a3b8;
  font-size: 0.85rem;
  margin-top: 0.5rem;
  font-style: italic;
}

/* Actions */
.config-actions {
  text-align: center;
  padding: 2rem;
}

.validation-message {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: #fca5a5;
  padding: 1rem;
  border-radius: 0.5rem;
  margin-bottom: 1.5rem;
  text-align: center;
}

