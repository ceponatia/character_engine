  border-top: 1px solid rgba(148, 163, 184, 0.2);
}

.typing-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: rgba(30, 41, 59, 0.8);
  border-radius: 1rem;
  color: #cbd5e1;
  font-size: 0.875rem;
  max-width: 70%;
}

.typing-dots {
