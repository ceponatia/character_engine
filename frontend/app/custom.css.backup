  border-color: #e11d48;
  background: rgba(15, 23, 42, 0.8);
  box-shadow: 0 0 0 3px rgba(225, 29, 72, 0.1);
}

.form-select {
  width: 100%;
  padding: 0.75rem 1rem;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(148, 163, 184, 0.3);
